@model Team
<partial name = "_NavPartial"/>

<h1 class="text-center">Add Team</h1>
<form action = "/UpdateTeamInDb/@Model.TeamId" method = "post">
    <div class = "form-group">
        <label for = "TeamName">Team Name</label>
        <input asp-for = "TeamName" class = "form-control">
        <span asp-validation-for = "TeamName"></span>
        </div>
    <div class = "form-group">
        <label for = "PointType">Scoring type</label>
        <select name = "PointType" class = "form-control">
            <option>Standard</option>
            <option>PPR</option>
            <option>2 Quaterbacks</option>
        </select>
    </div>
    <div class = "form-group">
        <label for = "TeamOwner">Team Owner</label>
        <input asp-for = "TeamOwner" class = "form-control">
        <span asp-validation-for = "TeamOwner"></span>
    </div>
    <input type="submit" value = "Add Team" class= "btn btn-dark">
</form>
<br/>
<h2 class="text-center">My Teams</h2>
            <table class = "table table-hover table-bordered table-dark">
                <tr>
                    <th>Team Name</th>
                    <th>League type</th>
                    <th>Team Owner</th>
                    <th>Remove Team</th>
                </tr>
                @foreach (Team p in ViewBag.Teams)
                {
                    <tr>
                        <td>@p.TeamName</td>
                        <td>@p.PointType</td>
                        <td>@p.TeamOwner</td>
                        <td><a href="/deleteteam/@p.TeamId">Remove</a></td>
                    </tr>
                }
            </table>